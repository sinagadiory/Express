<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ExpressSederhana</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <style>
        li{
            list-style-type: none;
        }
    </style>
</head>
<body>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <h2 class="mb-3">Add User</h2>
                    <form action="/register" method="post" class="mb-3">
                        <label class="mb-2" for="nama">Nama</label>
                        <input name="nama" type="text" class="form-control" id="nama" required>
                        <label class="mb-2" for="email">email</label>
                        <input name="email" type="text" class="form-control" id="email" required>
                        <label class="mb-2" for="password">Password</label>
                        <input name="password" type="password" class="form-control" id="password" required>
                        <label class="mb-2" for="confpassword">Confirm Password</label>
                        <input name="confpassword" type="password" class="form-control" id="confpassword" required>
                        <button class="btn mt-2 btn-primary">Add</button>
                    </form>
                    <h5 style="display:inline ">Ingin Menambahkan Data Cars?</h5>
                    <a href="/cars" class="btn btn-outline-success mx-4">Add Cars</a>
                </div>
                <div class="col-lg-6 align-self-lg-center">
                    <% if (users.length==0) { %>
                        <h3 style="text-align: center;">Data Users Masih Kosong</h3>
                    <% } %>
                    <% users.forEach(user => { %>
                        <h5><%=user.id %>. <%=user.nama %> </h5>
                        <ul>
                            <li>Email: <%= user.email%></li>
                            <li>Password: <%= user.password%></li>
                        </ul>
                    <% }) %>
                </div>
            </div>
        </div>
    </main>
    <footer style="background-color: #d7d7db; position:fixed;
    bottom:0;width: 100%;" class="mt-5 p-4">
        <div style="text-align: center;">
            Copyright 2022 Diory Pribadi Sinaga
        </div>
    </footer>
</body>
</html>